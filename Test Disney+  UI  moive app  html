    <script>
        // API Configuration
        const API_KEY = 'eb2ee3da5476ad4efc87554de737c77c';
        const BASE_URL = 'https://api.themoviedb.org/3';
        const IMAGE_BASE_URL = 'https://image.tmdb.org/t/p/original';
        
        // DOM Elements
        const loginForm = document.getElementById('loginForm');
        const registerForm = document.getElementById('registerForm');
        const mainApp = document.getElementById('mainApp');
        const playerContainer = document.getElementById('playerContainer');
        const showRegister = document.getElementById('showRegister');
        const showLogin = document.getElementById('showLogin');
        const loginFormElement = document.getElementById('loginFormElement');
        const registerFormElement = document.getElementById('registerFormElement');
        const homeLink = document.getElementById('homeLink');
        const watchNowBtn = document.getElementById('watchNowBtn');
        const closePlayer = document.getElementById('closePlayer');
        const searchInput = document.getElementById('searchInput');
        const streamButtons = document.querySelectorAll('.stream-btn');
        
        // State
        let currentUser = null;
        let featuredMovies = [];
        let disneyMovies = [];
        let selectedMovie = null;
        let currentStreamSource = 'vidsrc';
        let featuredIndex = 0;
        
        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Set up event listeners
            showRegister.addEventListener('click', showRegisterForm);
            showLogin.addEventListener('click', showLoginForm);
            loginFormElement.addEventListener('submit', handleLogin);
            registerFormElement.addEventListener('submit', handleRegister);
            homeLink.addEventListener('click', showHome);
            watchNowBtn.addEventListener('click', openPlayer);
            closePlayer.addEventListener('click', closePlayerView);
            
            // Set up stream source buttons
            streamButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    streamButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');
                    // Change stream source
                    currentStreamSource = this.getAttribute('data-source');
                    updatePlayerSource();
                });
            });
            
            // Set up search
            searchInput.addEventListener('input', handleSearch);
            
            // Fetch initial data
            fetchMovies();
            
            // Start featured carousel
            setInterval(rotateFeatured, 3000);
        });
        
        // Show register form
        function showRegisterForm() {
            loginForm.style.display = 'none';
            registerForm.style.display = 'flex';
        }
        
        // Show login form
        function showLoginForm() {
            registerForm.style.display = 'none';
            loginForm.style.display = 'flex';
        }
        
        // Handle login
        function handleLogin(e) {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // Simple validation
            if (email && password) {
                currentUser = {
                    email: email,
                    name: email.split('@')[0]
                };
                
                loginForm.style.display = 'none';
                mainApp.style.display = 'block';
            }
        }
        
        // Handle registration
        function handleRegister(e) {
            e.preventDefault();
            const email = document.getElementById('regEmail').value;
            const password = document.getElementById('regPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            // Simple validation
            if (email && password && password === confirmPassword) {
                currentUser = {
                    email: email,
                    name: email.split('@')[0]
                };
                
                registerForm.style.display = 'none';
                mainApp.style.display = 'block';
            }
        }
        
        // Show home screen
        function showHome() {
            mainApp.style.display = 'block';
            playerContainer.style.display = 'none';
        }
        
        // Fetch movies from API
        async function fetchMovies() {
            try {
                // Fetch trending movies
                const trendingResponse = await fetch(`${BASE_URL}/trending/movie/week?api_key=${API_KEY}`);
                const trendingData = await trendingResponse.json();
                featuredMovies = trendingData.results.slice(0, 5);
                renderFeaturedMovie();
                
                // Fetch Disney movies
                const disneyResponse = await fetch(`${BASE_URL}/search/movie?api_key=${API_KEY}&query=Disney`);
                const disneyData = await disneyResponse.json();
                disneyMovies = disneyData.results.filter(movie => movie.poster_path).slice(0, 12);
                renderDisneyOriginals();
                renderTrendingNow();
            } catch (error) {
                console.error('Error fetching movies:', error);
            }
        }
        
        // Render featured movie
        function renderFeaturedMovie() {
            if (featuredMovies.length > 0) {
                const movie = featuredMovies[featuredIndex];
                document.getElementById('heroImage').src = `${IMAGE_BASE_URL}${movie.backdrop_path}`;
                document.getElementById('heroTitle').textContent = movie.title;
                document.getElementById('heroRating').textContent = `${Math.round(movie.vote_average * 10)}% Match`;
                document.getElementById('heroYear').textContent = movie.release_date ? new Date(movie.release_date).getFullYear() : 'N/A';
                document.getElementById('heroDescription').textContent = movie.overview;
            }
        }
        
        // Rotate featured movie
        function rotateFeatured() {
            if (featuredMovies.length > 0) {
                featuredIndex = (featuredIndex + 1) % featuredMovies.length;
                renderFeaturedMovie();
            }
        }
        
        // Render Disney Originals
        function renderDisneyOriginals() {
            const container = document.getElementById('disneyOriginals');
            container.innerHTML = '';
            
            disneyMovies.forEach(movie => {
                const card = createMovieCard(movie);
                container.appendChild(card);
            });
        }
        
        // Render Trending Now
        function renderTrendingNow() {
            const container = document.getElementById('trendingNow');
            container.innerHTML = '';
            
            featuredMovies.forEach(movie => {
                const card = createMovieCard(movie);
                container.appendChild(card);
            });
        }
        
        // Create movie card element
        function createMovieCard(movie) {
            const card = document.createElement('div');
            card.className = 'content-card';
            card.innerHTML = `
                <img src="${IMAGE_BASE_URL}${movie.poster_path}" alt="${movie.title}">
                <div class="content-overlay">
                    <i class="fas fa-play"></i>
                </div>
                <div class="content-info">
                    <div class="content-title">${movie.title}</div>
                    <div class="content-rating">
                        <i class="fas fa-star"></i>
                        <span>${movie.vote_average.toFixed(1)}</span>
                    </div>
                </div>
            `;
            
            // Add click event to open player
            card.addEventListener('click', () => {
                selectedMovie = movie;
                openPlayer();
            });
            
            return card;
        }
        
        // Open player view
        function openPlayer() {
            if (!selectedMovie) return;
            
            document.getElementById('playerTitle').textContent = selectedMovie.title;
            updatePlayerSource();
            mainApp.style.display = 'none';
            playerContainer.style.display = 'block';
        }
        
        // Update player source based on selected stream
        function updatePlayerSource() {
            if (!selectedMovie) return;
            
            let src = '';
            
            switch(currentStreamSource) {
                case 'vidsrc':
                    src = `https://vidsrc.me/embed/${selectedMovie.id}`;
                    break;
                case '2embed':
                    src = `https://www.2embed.ru/embed/tmdb/movie?id=${selectedMovie.id}`;
                    break;
                case 'youtube':
                    src = `https://www.youtube.com/embed?listType=search&list=${encodeURIComponent(selectedMovie.title + ' trailer')}`;
                    break;
                default:
                    src = `https://vidsrc.me/embed/${selectedMovie.id}`;
            }
            
            document.getElementById('videoFrame').src = src;
        }
        
        // Close player view
        function closePlayerView() {
            playerContainer.style.display = 'none';
            mainApp.style.display = 'block';
            document.getElementById('videoFrame').src = '';
        }
        
        // Handle search
        function handleSearch() {
            const query = searchInput.value.toLowerCase();
            
            if (query.length > 2) {
                // Filter movies based on search query
                const filteredDisney = disneyMovies.filter(movie => 
                    movie.title.toLowerCase().includes(query)
                );
                
                const filteredTrending = featuredMovies.filter(movie => 
                    movie.title.toLowerCase().includes(query)
                );
                
                // Update displayed movies
                const container = document.getElementById('disneyOriginals');
                container.innerHTML = '';
                
                if (filteredDisney.length > 0) {
                    filteredDisney.forEach(movie => {
                        const card = createMovieCard(movie);
                        container.appendChild(card);
                    });
                } else {
                    container.innerHTML = '<p>No Disney movies found</p>';
                }
                
                const trendingContainer = document.getElementById('trendingNow');
                trendingContainer.innerHTML = '';
                
                if (filteredTrending.length > 0) {
                    filteredTrending.forEach(movie => {
                        const card = createMovieCard(movie);
                        trendingContainer.appendChild(card);
                    });
                } else {
                    trendingContainer.innerHTML = '<p>No trending movies found</p>';
                }
            } else {
                // Reset to original lists
                renderDisneyOriginals();
                renderTrendingNow();
            }
        }
    </script>
</body>
</html>
